<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/left_item"
            android:text="@string/materialname"/>
        <TextView
            android:id="@+id/id_item_materialname"
            style="@style/right_item"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/left_item"
            android:text="@string/materialtype"/>
        <TextView
            android:id="@+id/id_item_materialtype"
            style="@style/right_item"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/right_item"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/model1"
                android:text="asdasda"
                android:gravity="center"
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/model1_1"
                    style="@style/right_item"
                    android:layout_height="match_parent"
                    android:background="@color/slidemode2_1"
                    android:textSize="12sp"
                    android:text="简单"/>
                <TextView
                    android:id="@+id/model1_2"
                    style="@style/right_item"
                    android:layout_height="match_parent"
                    android:background="@color/slidemode2_2"
                    android:textSize="12sp"
                    android:text="结合Fragment"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/right_item"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/model2"
                android:text="asdasda"
                android:gravity="center"
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/model2_1"
                    style="@style/right_item"
                    android:layout_height="match_parent"
                    android:background="@color/slidemode2_1"
                    android:textSize="12sp"
                    android:text="静态导入手动播放"/>
                <TextView
                    android:id="@+id/model2_2"
                    style="@style/right_item"
                    android:layout_height="match_parent"
                    android:background="@color/slidemode2_2"
                    android:textSize="12sp"
                    android:text="动态导入自动播放"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/model3"
            style="@style/right_item"
            android:background="@color/slidemode3"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>